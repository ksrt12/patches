From: Kazakov Stepan <ksrt12group@gmail.com>
Date: Fri, 12 Apr 2019 23:41:29 +0300
Subject: [PATCH] add carrier label visibiliry in qs [1/2]

Signed-off-by: Kazakov Stepan <ksrt12group@gmail.com>
---
 res/values-ru/havoc_strings.xml          | 2 ++
 res/values/havoc_strings.xml             | 2 ++
 res/xml/havoc_settings_quicksettings.xml | 8 +++++++-
 3 files changed, 11 insertions(+), 1 deletion(-)

diff --git a/res/values-ru/havoc_strings.xml b/res/values-ru/havoc_strings.xml
index 20577f4..b1f6e65 100644
--- a/res/values-ru/havoc_strings.xml
+++ b/res/values-ru/havoc_strings.xml
@@ -853,6 +853,8 @@
     <string name="smart_pulldown_dismissable">Без удаляемых</string>
     <string name="smart_pulldown_ongoing">Нет текущих</string>
     <!-- QS footer icons -->
+    <string name="qs_footer_carrier_title">Имя оператора</string>
+    <string name="qs_footer_carrier_summary">Отображать имя оператора внизу быстрых настроек</string>
     <string name="qs_footer_services_title">Иконка запущенных служб</string>
     <string name="qs_footer_services_summary">Отображать значок запущенных служб внизу быстрых настроек</string>
     <string name="qs_footer_settings_title">Иконка настроек</string>
diff --git a/res/values/havoc_strings.xml b/res/values/havoc_strings.xml
index d376797..338497a 100644
--- a/res/values/havoc_strings.xml
+++ b/res/values/havoc_strings.xml
@@ -965,6 +965,8 @@
     <string name="smart_pulldown_ongoing">No ongoing</string>
 
     <!-- QS footer icons -->
+    <string name="qs_footer_carrier_title">Carrier name</string>
+    <string name="qs_footer_carrier_summary">Display carrier name in quick settings footer</string>
     <string name="qs_footer_services_title">Running Services icon</string>
     <string name="qs_footer_services_summary">Display Running Services icon in quick settings footer</string>
     <string name="qs_footer_settings_title">Settings icon</string>
diff --git a/res/xml/havoc_settings_quicksettings.xml b/res/xml/havoc_settings_quicksettings.xml
index acb1ff4..4b39209 100644
--- a/res/xml/havoc_settings_quicksettings.xml
+++ b/res/xml/havoc_settings_quicksettings.xml
@@ -136,6 +136,12 @@
         android:title="@string/footer_title"
         android:key="footer" >
 
+        <com.havoc.support.preferences.SecureSettingSwitchPreference
+            android:key="qs_footer_show_carrier"
+            android:title="@string/qs_footer_carrier_title"
+            android:summary="@string/qs_footer_carrier_summary"
+            android:defaultValue="true" />
+
         <com.havoc.support.preferences.SecureSettingSwitchPreference
             android:key="qs_show_secure"
             android:title="@string/qs_footer_warnings_title"
@@ -168,4 +174,4 @@
 
     </PreferenceCategory>
 
-</PreferenceScreen>
\ No newline at end of file
+</PreferenceScreen>
